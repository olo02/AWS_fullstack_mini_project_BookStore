package team1.service;

import java.util.List;

import team1.vo.Book;

// 책 정보 관련 서비스
public interface BookService {
	

	/**
	 * @author 천은경
	 * @since 23/02/07
	 * @param Book
	 * @return Book
	 * 출판사의 새로운 책 등록 요청
	 */
	void callReg();
	
	/**
	 * @author 천은경
	 * @since 23/02/07
	 * @param 
	 * @return Book
	 * 출판사에게 요청받은 책을 서점에 등록
	 */
	void bookReg(); 	
		
	/**
	 * @author 천은경
	 * @since 23/02/11
	 * @param String isbn, int status
	 * @return books에서 isbn과 status가 입력값과 같은 Book // 없으면 null;
	 * 모든 책 list에서 정보에 맞는 책 찾기
	 */
	public Book findBy(String isbn);
	public Book findBy(String isbn, int status);
	
	/**
	 * @author 천은경
	 * @since 23/02/11
	 * @param int status
 	 * @return books의 status와 동일한 list
	 * 상태에 맞는 리스트
	 */
	public List<Book> findList(int status);
	public List<Book> findList(String element);
	
	/**
	 * @author 천은경
	 * @since 23/02/10
	 * @param List<Book> page
	 * @return sear의 페이징 작업
	 * 검색 결과의 페이징 작업
	 */
	public void paging(List<Book> page, int size, String level);	
	
	/**
	 * @author 천은경
	 * @since 23/02/07
	 * @param 
	 * @return 등록된 책 중 title에 search와 일치하는 부분이 있는 Book
	 * 일치 목록 조회 : 제목별
	 */
	void searchTitle();
	
	/**
	 * @author 천은경
	 * @since 23/02/07
	 * @param 
	 * @return 등록된 책 중 author에 search와 일치하는 부분이 있는 Book
	 * 일치 목록 조회 : 작가별
	 */
	void searchAuthors();
	
	/**
	 * @author 천은경
	 * @since 23/02/08
	 * @param String publisher
	 * @return pendingBooks에 search와 일치하는 Book
	 * 일치 목록 조회 : 출판사가 본인이 승인 요청한 책 목록 확인 
	 */
	void publisherList(String publisher);
	
	/**
	 * @author 천은경
	 * @since 23/02/07 + 수정 23/02/10
	 * @param int status
	 * @return books에서 조건에 맞는 book
	 * 페이징 된 조회 (status : 0 = 정식등록 / 1 = 대기중 /  2 = 요청반려)
	 */
	void bookList(int status);
	

	
	
	/**
	 * @author 천은경
	 * @since 23/02/12
	 * @param
	 * @return 기능 설명
	 * 수정한다(admin)
	 */
	void bookModify();
	
	
	
	/**
	 * @author 천은경
	 * @since 23/02/11
	 * @param 
	 * @return books의 Book 삭제
	 * 관리자가 isbn코드를 입력하여 등록된 책 폐기
	 */
	void bookDelete();
	
	/**
	 * @author 천은경
	 * @since 23/02/08 + 수정 23/02/11
	 * @param 
	 * @return books에서 status가 1인 Book 중 삭제
	 * 관리자가 승인 대기 책 리스트 중 요청 반려할 책 선택
	 */
	void reject();
	
	
	
	
	
	
}
